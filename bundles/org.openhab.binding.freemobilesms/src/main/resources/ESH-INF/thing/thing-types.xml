<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="freemobilesms"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Thing Type -->
	<thing-type id="account">
		<label>FreeMobileSms Account</label>
		<description>Account for the SMS service of FreeMobile.</description>

		<channels>
			<channel id="message" typeId="message" />
		</channels>

		<config-description>
			<parameter name="user" type="text" required="true">
				<label>User</label>
				<description>The account identifier.</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<label>Password</label>
				<description>The secret token to use this account.</description>
			</parameter>
		</config-description>

	</thing-type>

	<!-- Channel Type -->
	<channel-type id="message">
		<item-type>String</item-type>
		<label>Send message</label>
		<description>Channel to send message via account.</description>
		<state readOnly="false" />
	</channel-type>

</thing:thing-descriptions>
